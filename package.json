{
  "name": "helix-x-validator",
  "version": "0.1.1",
  "description": "Lightweight CLI and library for parsing Helix configuration files, validating rule sets and schemas, and producing clear error reports before deployments.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "helix-validate": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "ts-node --esm src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "validate": "node dist/cli.js examples/config/sample-config.json --format json"
  },
  "keywords": [
    "helix",
    "validator",
    "validation",
    "config",
    "schema",
    "rules",
    "cli",
    "yaml",
    "json",
    "configuration",
    "lint",
    "check",
    "validate"
  ],
  "author": {
    "name": "HelixXmode",
    "url": "https://github.com/HelixXmode"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HelixXmode/Helix-Xmode-Validator.git"
  },
  "bugs": {
    "url": "https://github.com/HelixXmode/Helix-Xmode-Validator/issues"
  },
  "homepage": "https://github.com/HelixXmode/Helix-Xmode-Validator#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "yargs": "^17.7.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}

